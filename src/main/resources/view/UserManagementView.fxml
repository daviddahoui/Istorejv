<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.javastore.istorejv.controller.UserManagementController" spacing="10" alignment="center">
    <ListView fx:id="userListView" prefWidth="400" prefHeight="300"/>
    <HBox spacing="10">
        <Button text="Modifier Utilisateur" onAction="#handleUpdateUserAction"/>
        <Button text="Supprimer Utilisateur" onAction="#handleDeleteUserAction"/>
    </HBox>
    <Button text="Retour Dashboard" onAction="#handleBackAction"/>
</VBox>
