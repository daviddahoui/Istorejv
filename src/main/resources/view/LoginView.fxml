<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.javastore.istorejv.controller.LoginController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Ligne 0 : Email -->
    <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200"/>

    <!-- Ligne 1 : Mot de passe -->
    <Label text="Mot de passe:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200"/>

    <!-- Ligne 2 : Boutons -->
    <Button text="Se connecter" onAction="#handleLoginAction" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="CrÃ©er un compte" onAction="#handleCreateAccountAction" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
